---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'A personal writing portfolio' } = Astro.props;
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/writings/', label: 'Writings' },
  { href: '/links/', label: 'Links' },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <div class="color-bar"></div>

    <header class="site-header">
      <div class="container header-inner">
        <a href="/" class="site-title">Portfolio</a>
        <nav>
          {navLinks.map(({ href, label }) => (
            <a
              href={href}
              class:list={['nav-link', { active: currentPath === href || (href !== '/' && currentPath.startsWith(href)) }]}
            >
              {label}
            </a>
          ))}
        </nav>
      </div>
    </header>

    <main class="container main-content">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container footer-inner">
        <p>&copy; {new Date().getFullYear()} &middot; Built with Astro</p>
      </div>
    </footer>
  </body>
</html>

<style>
  .site-header {
    padding: var(--space-lg) 0;
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: var(--space-md);
  }

  .site-title {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 700;
    text-decoration: none;
    color: var(--text-heading);
  }

  nav {
    display: flex;
    gap: var(--space-lg);
  }

  .nav-link {
    font-family: var(--font-heading);
    font-size: 0.9rem;
    text-decoration: none;
    color: var(--text-light);
    position: relative;
    padding-bottom: 2px;
    transition: color 0.2s ease;
  }

  .nav-link:hover,
  .nav-link.active {
    color: var(--text-heading);
  }

  .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--accent);
    border-radius: 1px;
  }

  .main-content {
    padding-top: var(--space-lg);
    padding-bottom: var(--space-2xl);
    min-height: 60vh;
  }

  .site-footer {
    border-top: 1px solid var(--border);
    padding: var(--space-lg) 0;
  }

  .footer-inner {
    text-align: center;
    font-family: var(--font-heading);
    font-size: 0.8rem;
    color: var(--text-light);
  }
</style>

<style is:global>
  @import '../styles/global.css';
</style>
